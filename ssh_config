# ssh config file
#
# Earlier settings take priority over later ones

# short names
Host newbase
     HostName %h.openmarket.com

Host 19cw faith dawn giles gilesipmi osmc tara mrpointy storage1 lilah
    HostName %h.sw1v.org

Host ares hermes hera juno mnemosyne themis eleutheria pheme homonioia freya
    HostName %h.matrix.org

# per-domain config
Match host *.sw1v.org
     ForwardAgent yes

Match host *.matrix.org
     ForwardAgent yes

Match host *.openmarket.com
     User richardv
     ForwardAgent yes

# per-server config
Match host martinbrock.org
     User richard
     ForwardAgent yes

Match host gilesipmi.sw1v.org
     User ADMIN
     ServerAliveInterval 300

Match host giles.sw1v.org,tara.sw1v.org
    ProxyCommand ssh gw0.sw1v.org nc -w 90 %h %p
    ServerAliveInterval 30

Match host osmc.sw1v.org
    User osmc

Host mrpointy.sw1v.org
    User root
